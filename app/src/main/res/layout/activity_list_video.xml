<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <com.example.admin.youtubev3.CustomView.CustomTextView
                android:id="@+id/txtv_title_detail_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/img_more_detail_video"
                android:text="Phim chiến tranh chống mỹ cứu nước"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_more_detail_video"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:tint="@color/gray"
                tools:ignore="VectorDrawableCompat" />

            <com.example.admin.youtubev3.CustomView.CustomTextView
                android:id="@+id/txtv_detail_view_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_title_detail_video"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="6pt" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_like_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_thumb_up_black_24dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="10000" />

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_dislike_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_thumb_down_black_24dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="10000" />

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_share_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_share_black_24dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Chia sẻ" />

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_playlist_add_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_playlist_add_black_24dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Thêm vào" />
            </TableRow>
        </TableLayout>

        <com.example.admin.youtubev3.CustomView.CustomTextView
            android:id="@+id/txtv_description_deatail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_thumnail_channel_detail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/her" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/btn_subrice_detail"
                android:layout_toRightOf="@+id/img_thumnail_channel_detail"
                android:orientation="vertical">

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_title_channel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Phan Khải"
                    android:textColor="@color/black"
                    android:textSize="7pt" />

                <com.example.admin.youtubev3.CustomView.CustomTextView
                    android:id="@+id/txtv_subrice_channel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phan Khải"
                    android:textColor="@color/gray"
                    android:textSize="6pt" />
            </LinearLayout>

            <com.example.admin.youtubev3.CustomView.CustomButton
                android:id="@+id/btn_subrice_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:drawableLeft="@drawable/ic_place_youtube"
                android:drawablePadding="10dp"
                android:text="Đăng kí"
                android:textColor="@color/red"
                android:textSize="8pt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <com.example.admin.youtubev3.CustomView.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="Tiếp theo"
                android:textColor="@color/gray"
                android:textSize="7pt" />

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:checked="false"
                android:text="Tự động phát"
                android:textColor="@color/gray"
                android:theme="@style/SCBSwitch" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_list_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
