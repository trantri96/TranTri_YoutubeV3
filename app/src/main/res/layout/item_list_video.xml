<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout_list_video"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/img_item_thumnail_video"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <com.example.admin.youtubev3.CustomView.CustomTextView
            android:id="@+id/txtv_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black"
            android:padding="5dp"
            android:text="1:20:59"
            android:textColor="@color/white"
            android:textSize="5pt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.example.admin.youtubev3.CustomView.CustomTextView
            android:id="@+id/txtv_item_title_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/item_more_video"
            android:text="Phim chiến tranh chống mỹ cứu nước"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_more_video"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_more_vert_white_24dp"
            android:tint="@color/gray"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.admin.youtubev3.CustomView.CustomTextView
            android:id="@+id/txtv_item_view_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="6pt" />

        <com.example.admin.youtubev3.CustomView.CustomTextView
            android:id="@+id/txtv_item_publicAt_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="6pt" />
    </LinearLayout>
</LinearLayout>
